<Window x:Class="StartTileColorChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StartTileColorChanger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView ItemsSource="{Binding Path=Items, UpdateSourceTrigger=PropertyChanged}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="150" Header="Name" DisplayMemberBinding="{Binding Path=Name}" />
                    <GridViewColumn Width="200" Header="LnkPath" DisplayMemberBinding="{Binding Path=LnkPath}" />
                    <GridViewColumn Width="200" Header="ExePath" DisplayMemberBinding="{Binding Path=ExePath}" />
                    <GridViewColumn Width="50" Header="Width" DisplayMemberBinding="{Binding Path=Width}" />
                    <GridViewColumn Width="50" Header="Height" DisplayMemberBinding="{Binding Path=Height}" />
                    <GridViewColumn Width="50" Header="Row" DisplayMemberBinding="{Binding Path=Row}" />
                    <GridViewColumn Width="50" Header="Column" DisplayMemberBinding="{Binding Path=Column}" />
                    <GridViewColumn Width="100" Header="Color" DisplayMemberBinding="{Binding Path=Color}" />
                    <GridViewColumn Width="50" Header="Editable" DisplayMemberBinding="{Binding Path=Editable}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
